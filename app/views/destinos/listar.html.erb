<div class="row my-4 justify-content-between">
        
        <div class="col-4">
            <h1 class="titulo-seccion">Lista de Destinos</h1>
        </div>
        
        <div class="col-4">
            <%= link_to nuevo_destino_path, class:"btn btn-primary boton-izquierda" do %>
                <i class="bi bi-plus-circle"></i>
                Crear Nuevo Destino
            <% end %>
            <%= link_to productos_path, class:"btn btn-primary boton-derecha" do %>
                <i class="bi bi-card-list"></i>
                Lista Productos
            <% end %>
        </div>
    </div>
    <div class="row my-2 justify-content-between">
        <div class="col-4">
            <h3>Nombre</h3>
        </div>
        <div class="col-2 me-4">
            <h3>Acciones</h3>
        </div>
    </div>
    <% @destinos.each do |destino| %>
        <div class="row my-3 justify-content-between border border-2 border-primary rounded-pill shadow rounded hover filas-lista-categorias">
            <div class="col-4 ms-3 my-auto fw-bolder fs-5"><%= destino.nombre %></div>
            <div class="col-2  p-0 mx-0 my-1">
                <%= link_to editar_destinos_path(destino), class:"btn btn-warning boton-izquierda" do %>
                    <i class="bi bi-pencil-fill"></i>
                    Editar
                <% end %>
                <%= link_to destino_path(destino), method: :delete, data: { confirm: 'Â¿Quieres eliminar la categoria?' }, class:"btn btn-danger boton-derecha" do %>                   
                    <i class="bi bi-trash-fill"></i>
                    Eliminar                    
                <% end %>
            </div>
        </div>
    <% end %>